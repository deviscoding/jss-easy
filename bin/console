#!/usr/bin/env php
<?php

set_time_limit(0);

$dir = __DIR__.'/..';
require_once $dir.'/vendor/autoload.php';

use Symfony\Component\Console\Application;

// Output Commands
$command[] = new DevCoding\Jss\Helper\Command\BadgeCommand();
$command[] = new DevCoding\Jss\Helper\Command\WriteCommand();
$command[] = new DevCoding\Jss\Helper\Command\WriteLnCommand();
// Installer Command
$command[] = new DevCoding\Jss\Helper\Command\InstallCommand();
// Info Commands
$command[] = new DevCoding\Jss\Helper\Command\HardwareCommand();
$command[] = new DevCoding\Jss\Helper\Command\OsCommand();
$command[] = new DevCoding\Jss\Helper\Command\AppCommand();
// Download & Install Commands
$command[] = new DevCoding\Jss\Helper\Command\GithubInstallCommand();
$command[] = new DevCoding\Jss\Helper\Command\PkgInstallCommand();
$command[] = new DevCoding\Jss\Helper\Command\DmgInstallCommand();
$app       = new Application('JssHelper', 'v1.0');
$app->addCommands($command);
$app->run();
